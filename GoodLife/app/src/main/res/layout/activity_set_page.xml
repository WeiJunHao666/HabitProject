<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/set_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_set_back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/set_body"
        android:layout_below="@id/set_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/set_btn1"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常见问题"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/set_btn1"
            android:background="#B4EEEEEE"/>
        <RelativeLayout
            android:id="@+id/set_btn2"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                />
        </RelativeLayout>
        <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/set_btn1"
        android:background="#B4EEEEEE"/>
        <RelativeLayout
            android:id="@+id/set_btn3"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私政策与用户协议"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/set_btn1"
            android:background="#B4EEEEEE"/>
        <RelativeLayout
            android:id="@+id/set_btn4"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本更新"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>