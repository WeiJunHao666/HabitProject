<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.example.goodlife.wjh.view.ItemView
        android:layout_gravity="center"
        android:layout_width="30dp"
        android:layout_height="60dp"/>
    
    <TextView
        android:id="@+id/txt_daily_time"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:15"/>

    <LinearLayout
        android:id="@+id/bg_daily"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_circular">

        <ImageView
            android:id="@+id/img_daily"
            android:src="@drawable/breakfast42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_daily_name"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名字"/>


</LinearLayout>