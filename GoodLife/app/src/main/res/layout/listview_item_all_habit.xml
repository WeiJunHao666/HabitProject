<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:drag_edge="right"
    android:id="@+id/swipe"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/trash"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:tag="Bottom">

        <LinearLayout
            android:id="@+id/swipe_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/swipe_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:text="删除"/>

        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/swipe_open"-->
<!--            android:layout_width="1dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:background="#f55509"-->
<!--            android:gravity="center"-->
<!--            android:text="打开"-->
<!--            android:textColor="@android:color/white"-->
<!--            android:layout_marginLeft="20dp"-->
<!--            android:textSize="20sp"/>-->

<!--        <TextView-->
<!--            android:id="@+id/swipe_delete"-->
<!--            android:layout_width="1dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@android:color/holo_red_dark"-->
<!--            android:gravity="center"-->
<!--            android:text="删除"-->
<!--            android:textColor="@android:color/white"-->
<!--            android:textSize="20sp"/>-->
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bg_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/background_all">

        <ImageView
            android:id="@+id/img_all_icon"
            android:src="@drawable/breakfast42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txt_all_name"
            android:layout_toRightOf="@id/img_all_icon"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="名字"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_all_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0天"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共计坚持"/>

        </LinearLayout>

    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>